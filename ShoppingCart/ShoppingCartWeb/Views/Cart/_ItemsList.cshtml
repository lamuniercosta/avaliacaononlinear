<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th style="width:30px">Qty.</th>
            <th>Product</th>
            <th>Price</th>
            <th style="width:75px">Actions</th>
        </tr>
    </thead>

    <tbody data-bind="foreach: cart">
        <tr>
            <td style="text-align:center">
                <b data-bind="visible: !editing(), text: $data.quantity, click: edit"></b>
                <input data-bind="visible: editing, value: $data.quantity, hasFocus: editing"  style="width:20px"/>
            </td>
            <td data-bind="text:$data.product().name"></td>
            <td data-bind="text:formatCurrency($data.cost())"></td>
            <td style="text-align:center">
                <a href="#" class="btn btn-mini btn-danger" data-bind="click:$parent.removeFromCart">
                    <i class="icon-remove icon-white"></i> Remove
                </a>
            </td>
        </tr>
    </tbody>
</table>