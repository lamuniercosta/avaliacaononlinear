
@{
    ViewData["Title"] = "Payment Methods";
}
<div class="page-header">
    <h2 class="text-center">Payment Methods</h2>
</div>
<script src="~/js/ViewModels/PaymentViewModel.js"></script>
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2 class="panel-title">Register new payment method</h2>
            </div>

            <div class="panel-body" data-bind="with: addPaymentViewModel">
                @Html.Partial("_EditPayment")
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Registered Payment Methods</h2>
            </div>
            <div class="panel-body" data-bind="with: paymentListViewModel">
                @Html.Partial("_PaymentsList")
            </div>
        </div>
    </div>

</div> 


